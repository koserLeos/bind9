// NS5

controls { /* empty */ };

options {
	query-source address 10.53.0.5;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.5; };
	listen-on-v6 { none; };
	recursion yes; /* default, this is a resolver test */

# If ecs-forward is enabled and you try to forward an ECS option to a zone
# that's covered by ecs-zones, the option you sent will be forwarded.
# (If ecs-forward is not enabled, then it will respond with REFUSED if
# receives an ECS option with non-zero source prefix length.)
	ecs-forward { 10.53.0.1; 10.53.0.2; 10.53.2.2; };
	ecs-zones { test.example; };

};

key rndc_key {
	secret "1234abcd8765";
	algorithm hmac-sha256;
};

controls {
	inet 10.53.0.5 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

zone "." {
	type hint;
	file "root.hint";
};
