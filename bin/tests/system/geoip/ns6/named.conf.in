// NS6

controls { /* empty */ };

options {
	query-source address 10.53.0.6;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.6; };
	listen-on-v6 { none; };
	recursion yes; /* default, this is a resolver test */

# ecs-forward is not enabled, so if receive an ECS option with a
# non-zero source prefix length for a name covered by ecs-zones,
# it will return REFUSED.
# If don't receive any ECS option and name is covered by ecszones-
# it will use the source IP address of the originating query to
# synthesize an ECS option.

	ecs-zones { test.example; };

};

key rndc_key {
	secret "1234abcd8765";
	algorithm hmac-sha256;
};

controls {
	inet 10.53.0.6 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

zone "." {
	type hint;
	file "root.hint";
};
