controls { /* empty */ };

options {
	directory ".";
	query-source address 10.53.0.1;
	notify-source 10.53.0.4;
	transfer-source 10.53.0.4;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.4; };
	listen-on-v6 { fd92:7065:b8e:ffff::4; };

	/* This server forwards to NS7 */
	recursion yes;
	allow-recursion { any; };
	forward only;
	forwarders { 10.53.0.7; };

	/*
	 * - ECS is enabled for the domain test.example using default
	 *   prefix length settings.
	 * - ECS forwarding is allowed for a single address.
	 */
	ecs-zones { test.example; };
	ecs-forward { 10.53.0.1; fd92:7065:b8e:ffff::1; };
};

key rndc_key {
	secret "1234abcd8765";
	algorithm hmac-sha256;
};

controls {
	inet 10.53.0.4 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

view "default" {
	zone "." {
		type hint;
		file "root.hint";
	};
};
